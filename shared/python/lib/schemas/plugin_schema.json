{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Plugin Schema",
  "description": "Schema for validating plugin structures",
  "type": "object",
  "properties": {
    "verb": {
      "type": "string",
      "pattern": "^[A-Z0-9_]+$",
      "minLength": 1,
      "maxLength": 50,
      "description": "The action verb for this plugin"
    },
    "description": {
      "type": "string",
      "minLength": 10,
      "description": "Description of what the plugin does"
    },
    "inputDefinitions": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "name": {
            "type": "string",
            "minLength": 1,
            "description": "Name of the input parameter"
          },
          "type": {
            "type": "string",
            "enum": ["string", "number", "boolean", "array", "object", "any"],
            "description": "Data type of the input"
          },
          "required": {
            "type": "boolean",
            "description": "Whether this input is required"
          },
          "defaultValue": {
            "description": "Default value for this input"
          },
          "description": {
            "type": "string",
            "description": "Description of the input parameter"
          },
          "args": {
            "type": "object",
            "description": "Additional arguments for the input"
          }
        },
        "required": ["name", "type"],
        "additionalProperties": false
      },
      "minItems": 1
    },
    "outputDefinitions": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "name": {
            "type": "string",
            "minLength": 1,
            "description": "Name of the output"
          },
          "type": {
            "type": "string",
            "enum": ["string", "number", "boolean", "array", "object", "any"],
            "description": "Data type of the output"
          },
          "description": {
            "type": "string",
            "description": "Description of the output"
          }
        },
        "required": ["name", "type"],
        "additionalProperties": false
      },
      "minItems": 1
    },
    "metadata": {
      "type": "object",
      "properties": {
        "version": {
          "type": "string",
          "description": "Plugin version"
        },
        "author": {
          "type": "string",
          "description": "Plugin author"
        },
        "license": {
          "type": "string",
          "description": "Plugin license"
        }
      },
      "additionalProperties": false
    }
  },
  "required": ["verb", "description", "inputDefinitions", "outputDefinitions"],
  "additionalProperties": false
}