{
  "default": true,
  "MD001": true,   // Heading levels should only increment by one level at a time
  "MD003": {      // Heading style
    "style": "atx"
  },
  "MD004": {      // Unordered list style
    "style": "dash"
  },
  "MD005": true,   // Inconsistent indentation for list items at the same level
  "MD007": {      // Unordered list indentation
    "indent": 2
  },
  "MD009": true,   // Trailing spaces
  "MD010": true,   // Hard tabs
  "MD011": true,   // Backslashes should not be used in headings
  "MD012": true,   // Multiple consecutive blank lines
  "MD013": {      // Line length
    "line_length": 120,
    "code_blocks": false,
    "tables": false
  },
  "MD014": true,   // Dollar signs used in shell examples without comments
  "MD018": true,   // No space after hash in atx style heading
  "MD019": true,   // Multiple spaces after hash in atx style heading
  "MD022": true,   // Headings should be surrounded by blank lines
  "MD023": true,   // Headings must start at the beginning of the line
  "MD024": true,   // Multiple headings with the same content
  "MD025": true,   // Multiple top-level headings in the same document
  "MD026": true,   // Trailing punctuation in heading
  "MD027": true,   // Multiple spaces after blockquote symbol
  "MD028": true,   // Blank line inside blockquote
  "MD029": {      // Ordered list item prefix
    "style": "ordered"
  },
  "MD030": true,   // Spaces after list markers
  "MD031": true,   // Fenced code blocks should be surrounded by blank lines
  "MD032": true,   // Lists should be surrounded by blank lines
  "MD033": false,  // Inline HTML (allowing HTML for flexibility in some docs)
  "MD034": true,   // Bare URL used
  "MD035": {      // Horizontal rule style
    "style": "---"
  },
  "MD036": true,   // Emphasis used instead of heading
  "MD037": true,   // Spaces inside emphasis markers
  "MD038": true,   // Spaces inside code block markers
  "MD039": true,   // Fenced code blocks should not be followed by a blank line
  "MD040": true,   // Fenced code blocks should be given a language
  "MD041": true,   // First line in file should be a top-level heading
  "MD042": true,   // No empty links
  "MD043": true,   // Required heading structure (can be customized if needed)
  "MD044": {      // Proper names should have the correct capitalization
    "names": ["GitHub", "Git", "Markdown", "Node.js", "TypeScript", "JavaScript", "React", "Python", "Docker", "Kubernetes", "VS Code"]
  },
  "MD045": true,   // Images should have alternate text
  "MD046": true,   // Code block style
  "MD047": true,   // Files should end with a single newline character
  "MD048": true    // Code fences should be of a consistent style
}
