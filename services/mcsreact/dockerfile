# ---- Stage 1: Build ----
FROM node:20-alpine AS builder

WORKDIR /usr/src/app

# Copy root package files for workspace context
COPY package.json package-lock.json ./

# Copy ONLY frontend package files - this is what actually needs @mui
COPY services/mcsreact/package*.json ./services/mcsreact/

# Install dependencies (npm will hoist @mui and all other packages to root node_modules)
RUN npm install --legacy-peer-deps

# Copy frontend source code
COPY services/mcsreact ./services/mcsreact

# Build ONLY the frontend
RUN npm run build --workspace=@cktmcs/cktmcs-frontend

# ---- Stage 2: Serve ----
FROM nginx:stable-alpine

COPY --from=builder /usr/src/app/services/mcsreact/build /usr/share/nginx/html
COPY services/mcsreact/nginx.conf /etc/nginx/conf.d/default.conf

EXPOSE 80

CMD ["nginx", "-g", "daemon off;"]
